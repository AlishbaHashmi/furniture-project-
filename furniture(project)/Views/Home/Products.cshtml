@model IEnumerable<furniture_project_.Models.Item>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                  
                    @foreach (var item in Model)
                    {

                        <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="product-item">
                                <div class="position-relative bg-light overflow-hidden">
                                    <img class="img-fluid w-100" src="   @Html.DisplayFor(modelItem => item.Pimage)" alt="">
                                    <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3"> @Html.DisplayFor(modelItem => item.Cat.CatName)</div>
                                </div>
                                <div class="text-center p-4">
                                    <a class="d-block h5 mb-2" href=""> @Html.DisplayFor(modelItem => item.Name)</a>
                                    <span class="text-primary me-1"> Rs. @Html.DisplayFor(modelItem => item.Price)</span>

                                </div>
                                <div class="d-flex border-top">
                                    <small class="w-50 text-center border-end py-2">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="bg-success nav-item nav-link ">View details</a>
                                        
                                    </small>
                                    <small class="w-50 text-center py-2">
                                        <a class="text-body" href=""><i class="bg-warning fa fa-shopping-bag text-primary me-2"></i>Add to cart</a>
                                    </small>
                                </div>
                            </div>
                        </div>



                    }
                </div>
            </div>
        </div>
   

   

    